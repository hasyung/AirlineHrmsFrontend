div.app-content-wrapper(flex nb-table='ctrl.flows' nb-safe-src="ctrl.flows")
    .search-container(nb-search)
        div(nb-predicate="姓名" predicate-attr="name")
            input(name="name" placeholder="姓名" ng-model="name")
        div(nb-predicate="员工编号" predicate-attr="employee_no")
            input(name="employee_no" placeholder="工号" ng-model="employee_no")

    .search-btn-group
        md-button.md-raised.purple(nb-pipe="ctrl.searchlaborsTransfers(tableState)") 开始搜索

    .table-container
        h4 请假列表
        table.table.table-striped.custom-table
            thead
                tr
                    th(select-row="" mode='all')
                    th 员工编码
                    th 姓名
                    th 当前部门
                    th 当前岗位
                    th 转入部门
                    th 转入岗位
                    th 申请日期
                    th 详细
            tbody
                tr(ng-repeat="flow in ctrl.flows track by $index")
                    td(select-row="flow" mode="multiple")
                    td(ng-bind="flow.sponsor.employeeNo")
                    td(ng-bind="flow.sponsor.name")
                    td(ng-bind="flow.sponsor.departmentName")
                    td(ng-bind="flow.sponsor.positionName")
                    td(ng-bind="flow.createdAt | date:'yyyy-MM-dd'")
                    td(ng-bind="flow.category")
                    td(ng-bind="flow.name")
                    td(ng-bind="flow.createdAt | date:'yyyy-MM-dd'")
                    td() 1天
                    td(ng-bind="flow.workflowState")
                    td(ng-bind="flow.endDate | date:'yyyy-MM-dd'")
                    td
                        a(href="javscript:void(0);" flow-handler="flow") 查看
    .custom-pages(nb-pagination="ctrl.laborsTransfers.$metadata" per-page="15")