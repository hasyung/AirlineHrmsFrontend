.app-content-wrapper
    form.org-postadd-detail.org-postadd-basic(title="基本信息" name="posForm" novalidate ng-submit="ctrl.updateDetail(currentPos)")
        .postadd-form-group
            label.postadd-control-label 岗位名称
            input.postadd-form-control(type='text', placeholder='岗位名称', ng-model="currentPos.name", name="name", required)
            .form-control-error(ng-messages="posForm.name.$error", ng-if="posForm.name.$dirty")
                .form-group-error(ng-message="required") 名称必填
        .postadd-form-group
            label.postadd-control-label 岗位通道
            nb-dropdown(
                ng-model="currentPos.channel", remote-key="position_channels", name="channel", additory="false", required)
            .form-control-error(ng-messages="posForm.channel.$error", ng-if="posForm.channel.$dirty")
                .form-group-error(ng-message="required") 通道必选
        .postadd-form-group
            label.postadd-control-label OA文件编号
            input.postadd-form-control(type='text', placeholder='填写OA文件编号', name="fileName", ng-model="currentPos.oaFileNo", required)
            .form-control-error(ng-messages="posForm.fileName.$error", ng-if="posForm.fileName.$dirty")
                .form-group-error(ng-message="required") OA文件必填
        .postadd-form-group
            label.postadd-control-label 编制
            input.postadd-form-control(type='number', placeholder='填写计划编制人数', name="budgetedStaffing", ng-model="currentPos.budgetedStaffing", required)
            .form-control-error(ng-messages="posForm.budgetedStaffing.$error", ng-if="posForm.budgetedStaffing.$dirty")
                .form-group-error(ng-message="required") 编制必填
                .form-group-error(ng-message="number") 类型必须为数字
        .postadd-form-group
            label.postadd-control-label 工时制度
            nb-dropdown(
                ng-model="currentPos.schedule" remote-key="position_schedules", required="true", name="schedule")
            .form-control-error(ng-messages="posForm.schedule.$error", ng-if="posForm.schedule.$dirty")
                .form-group-error(ng-message="required") 工时必选
        .postadd-form-group
            label.postadd-control-label 分类
            nb-dropdown(
                ng-model="currentPos.category" remote-key="position_categories", required="true", name="category")
            .form-control-error(ng-messages="posForm.category.$error", ng-if="posForm.category.$dirty")
                .form-group-error(ng-message="required") 类别必选
        .postadd-form-group
            label.postadd-control-label 岗位性质
            nb-dropdown(
                ng-model="currentPos.nature" remote-key="position_natures", required="true", name="nature")
            .form-control-error(ng-messages="posForm.nature.$error", ng-if="posForm.nature.$dirty")
                .form-group-error(ng-message="required") 性质必选

        .postadd-form-group
            label.postadd-control-label 所在部门
            span.postadd-control-text {{currentOrg.name}}
        .postadd-form-group
            label.postadd-control-label
            button.btn.btn-info(type="submit" required ng-disabled="posForm.$invalid") 保存

