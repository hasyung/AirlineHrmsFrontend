.my-requests(flex ng-init="showSalary = true")
    .current-month
        md-icon.prev(md-svg-src="md-toggle-arrow")
        span.month 2015-8
        md-icon.next(md-svg-src="md-toggle-arrow")
    .current-month-info
        .info-left
            .title
                | 8月工资
            .salary-circle(progres-value)
                .value(ng-show="showSalary") 12000.68
                img(src="/images/my_request/progress-circle.png")
            .action
                button(
                    ng-show="showSalary"
                    ng-click="showSalary=false"
                    ) 隐藏
                button(
                    ng-show="!showSalary"
                    ng-click="showSalary=true"
                    ) 显示
        .info-right
            .info-content
                .info-item
                    .title 绩效
                    .value 优秀
                .info-item
                    .title 社保
                    .value 860
                        span 元
                .info-item.pt45
                    .title 公积金
                    .value 980
                        span 元
                .info-item.pt45
                    .title 剩余年假
                    .value 8
                        span 天


    .my-cell-cotainer
        a.my-requests-cell.ml0(ui-sref=".leave")
