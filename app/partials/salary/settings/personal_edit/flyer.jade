div(ng-controller="salaryExchangeCtrl as exchangeCtrl")
    div(layout)
        md-input-container.row-has-value(flex)
            label 基础工资
            md-select(ng-model="current.baseWage" placeholder="请选择" ng-change="exchangeCtrl.fly(current); current.baseMoney=0; current.baseFlag=null;")
                md-option(value="flyer_duty_leader_base") 责任机长
                md-option(value="flyer_legend_base") 荣誉级飞行员
                md-option(value="flyer_leader_base") 机长
                md-option(value="flyer_copilot_base") 副驾
                md-option(value="flyer_teacher_A_base") 教员A
                md-option(value="flyer_teacher_B_base") 教员B
                md-option(value="flyer_teacher_C_base") 教员C
                md-option(value="flyer_student_base") 学员
        md-input-container.row-has-value(flex)
            label 档级
            md-select(ng-model="current.baseFlag" placeholder="请选择" ng-change="exchangeCtrl.fly(current)")
                md-option(ng-value="item" ng-repeat="item in exchangeCtrl.fly_flag_array(current)") {{item}}
        md-input-container(flex)
            label 金额
            input(type="number" min="0" max="100000" step="1" ng-model="current.baseMoney" readonly)
    div(layout)
        md-input-container(flex)
            label 岗位工资保留
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepPosition")
        md-input-container(flex)
            label 业绩奖保留
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepPerformance")
        md-input-container(flex)
            label 工龄工资保留
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepWorkingYears")
    div(layout)
        md-input-container(flex)
            label 保底增幅
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepMinimumGrowth")
        md-input-container(flex)
            label 地勤补贴保留
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepLandAllowance")
        md-input-container(flex)
            label 生活补贴保留
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepLifeAllowance")
    div(layout)
        md-input-container(flex)
            label 09调资增加保留
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepAdjustment09")
        md-input-container(flex)
            label 14公务用车保留
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepBus14")
        md-input-container(flex)
            label 14通信补贴保留
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepCommunication14")

    div(layout)
        md-input-container.row-has-value(flex)
            label 到岗日期
            input(ng-model="current.joinScalDate" readonly)
        md-input-container.row-has-value(flex)
            label 薪酬到岗日期
            input(bs-datepicker ng-model="current.joinSalaryScalDate")
        md-input-container.row-has-value(flex)
            label 工龄工资
            input(ng-model="current.workingYearsSalary")
        md-input-container.row-has-value(flex)
            label 小时费
            md-select(ng-model="current.flyHourFee" placeholder="请选择" ng-change="exchangeCtrl.fly_hour(current)")
                md-option(value="copilot_6") 副驾驶6
                md-option(value="copilot_5") 副驾驶5
                md-option(value="copilot_4") 副驾驶4
                md-option(value="copilot_3") 副驾驶3
                md-option(value="copilot_2") 副驾驶2
                md-option(value="copilot_1") 副驾驶1
                md-option(value="copilot_special") 副驾驶特别
                md-option(value="leader") 机长
                md-option(value="leader_B") 责任机长B
                md-option(value="leader_A") 责任机长A
                md-option(value="techer_B") 教员B
                md-option(value="techer_A") 教员A
                md-option(value="student") 飞行学员
        md-input-container(flex)
            label 标准
            input(type="number" min="0" max="100000" ng-model="current.flyHourMoney" readonly)

    div(layout)
        md-input-container.row-has-value(flex)
            label 安检津贴
            md-select(ng-model="current.securitySubsidy" placeholder="请选择")
                md-option(value="none") 无
                md-option(value="lower") 初级
                md-option(value="middle") 中级
                md-option(value="higher") 高级
        md-input-container.row-has-value(flex)
            label 安置补贴
            md-select(ng-model="current.placementSubsidy" placeholder="请选择")
                md-option(value="false") 无
                md-option(value="true") 有
        md-input-container.row-has-value(flex)
            label 班组长津贴
            md-select(ng-model="current.leaderSubsidy" placeholder="请选择")
                md-option(value="none") 无
                md-option(value="line_A") 一线A类
                md-option(value="line_B") 一线B类
                md-option(value="line_C") 一线C类
                md-option(value="line_D") 一线D类
                md-option(value="logistics_1") 后勤一类
                md-option(value="logistics_2") 后勤二类
        md-input-container.row-has-value(flex)
            label 航站管理津贴
            md-select(ng-model="current.terminalSubsidy" placeholder="请选择")
                md-option(value="none") 无
                md-option(value="first") 一类
                md-option(value="second") 二类
    div(layout)
        md-input-container.row-has-value(flex)
            label 车勤补贴
            md-select(ng-model="current.carSubsidy" placeholder="请选择")
                md-option(value="false") 无
                md-option(value="true") 有
        md-input-container.row-has-value(flex)
            label 地勤补贴
            md-select(ng-model="current.groundSubsidy" placeholder="请选择")
                md-option(value="none") 无
                md-option(value="first") 一类
                md-option(value="second") 二类
                md-option(value="third") 三类
                md-option(value="fourth") 四类
                md-option(value="fifth") 五类
                md-option(value="sixth") 六类
        md-input-container.row-has-value(flex)
            label 机务放行补贴
            md-select(ng-model="current.machineSubsidy" placeholder="请选择")
                md-option(value="none") 无
                md-option(value="first") 一档
                md-option(value="second") 二档
                md-option(value="third") 三档
                md-option(value="fourth") 四档
                md-option(value="fifth") 五档
        md-input-container.row-has-value(flex)
            label 试车津贴
            md-select(ng-model="current.trialSubsidy" placeholder="请选择")
                md-option(value="none") 无
                md-option(value="first") 一类
                md-option(value="second") 二类

    div(layout)
        md-input-container.row-has-value(flex)
            label 飞行安全荣誉津贴
            md-select(ng-model="current.honorSubsidy" placeholder="请选择")
                md-option(value="none") 无
                md-option(value="copper") 铜质
                md-option(value="silver") 银质
                md-option(value="gold") 金质
                md-option(value="exploit") 功勋
        md-input-container(flex)
        md-input-container(flex)
        md-input-container(flex)

    div(layout)
        md-input-container(flex)
            label 费用化报销金额
            input(type="number" min="0" max="1000000" ng-model="current.refundFee")
        md-input-container(flex)
            label 高温补贴
            input(type="number" min="0" max="1000000" ng-model="current.tempAllowance")
        md-input-container(flex)
            label 通讯补贴
            input(type="number" min="0" max="1000000" ng-model="current.communicateAllowance")
        md-input-container(flex)
            label 公务车报销额度
            input(type="number" min="0" max="1000000" ng-model="current.officialCar")

    div(layout)
        md-checkbox.md-primary(ng-model="current.limitLeader") 是否飞行受限干部

    div(layout)
        md-input-container(flex)
            label 最低飞行时间
            input(type="number" min="0" max="1000000" ng-model="current.lowestFlyTime")
        md-input-container(flex)
            label 最低计费时间
            input(type="number" min="0" max="1000000" ng-model="current.lowestCalcTime")
        md-input-container(flex)
            label 干部补贴飞行时间
            input(type="number" min="0" max="1000000" ng-model="current.leaderSubsidyTime")
        md-input-container(flex style="margin-top:20px")
            md-select(ng-model="current.flyCheckLifecycle" placeholder="飞行时限考核周期")
                md-option(value="无") 无
                md-option(value="季度考核") 季度考核
                md-option(value="月度考核") 月度考核
