md-dialog.employee_move
    md-content(ng-init="borrowEmployee = {special_category:'借调'}; ctrl.loadEmp = {};")
        form(ng-submit="ctrl.newMoveEmployee(borrowEmployee);dialog.close();" name="newBorrowForm" flex)
            md-toolbar.md-accent(md-theme="hrms")
                .md-toolbar-tools
                    span 借调设置
            .dialog-content(layout layout-align="center")
                fieldset(flex)
                    div(style="display:none;")
                        input(ng-model="borrowEmployee.employeeId")
                    div(layout)
                        md-input-container(flex)
                            label 姓名
                            input(ng-model="ctrl.loadEmp.name"
                                name="employeeName"
                                ng-model-options="{debounce: {'default': 1000, 'blur': 0}}"
                                ng-change="ctrl.loadEmployee({name: ctrl.loadEmp.name}, accreditEmployee);"
                                required)
                        div(flex)
                    div(layout)
                        md-input-container(flex)
                            label 部门
                            input(
                                ng-model="ctrl.loadEmp.department.name"
                                name="department"
                                readonly
                                )
                        md-input-container(flex)
                            label 岗位
                            input(ng-model="ctrl.loadEmp.position.name" name="position" readonly)
                    div(layout)
                        md-input-container(flex)
                            label 借调部门
                            input(ng-model="borrowEmployee.specialLocation" name="specialLocation" required)
                        div(flex)
                            md-checkbox.md-primary() 公司外
                    div(layout)
                        md-input-container(flex)
                            label 借调开始时间
                            input(ng-model="borrowEmployee.limitTime.startDate" name="startDate" bs-datepicker required)
                        md-input-container(flex)
                            label 借调结束时间
                            input(ng-model="borrowEmployee.limitTime.endDate" name="endDate" bs-datepicker required)
                    div(layout)
                        md-input-container(flex)
                            label 文件编号
                            input(ng-model="borrowEmployee.fileNo" name="fileNo" required)

            .md-actions
                md-button(type="button" ng-click="cancel(borrowEmployee, $event, newBorrowForm);dialog.close()") 取 消
                md-button.md-primary.md-raised(type="submit") 确 定