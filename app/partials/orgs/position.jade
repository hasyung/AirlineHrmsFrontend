.app-content-wrapper.org-pos-list
    .org-modal-posttop 岗位信息列表
        .btn-group.pull-right
            button.btn.btn-default.fa.fa-trash-o.pull-right(
                title="请选择要删除的岗位"
                ng-disabled="ctrl.getSelectsIds().length == 0"
                nb-confirm="ctrl.batchRemove(isConfirm)"
                nb-title="您确定要删除所选的{{ctrl.getSelectsIds().length}}个岗位吗?"
                nb-content="删除操作将在你点击确定后执行，岗位删除后将无法恢复。")
            button.btn.btn-default.fa.fa-plus.pull-right(
                title="新增岗位"
                nb-dialog
                template-url="partials/orgs/position_add.html"
            )
            button.btn.btn-info.pull-right(
                nb-dialog
                template-url="partials/position/position_transfer.html"
                ) 调整机构
            .pull-right.nb-dropdown.right-align(simple-dropdown, btn-text="导出")
                li( role="presentation")
                    a(role="menuitem" ng-href="/api/positions/export_to_xls?department_id={{currentOrg.id}}" ) 导出全部岗位
                li( role="presentation",ng-show="ctrl.getSelectsIds().length != 0")
                    a(role="menuitem" ng-href="/api/positions/export_to_xls?{{ctrl.getExportParams(currentOrg.id)}}" ) 导出所选岗位
                li( role="presentation")
                    a(role="menuitem" ng-href="/api/positions/export_specification_pdf?department_id={{currentOrg.id}}" ) 导出全部岗位描述书
                li( role="presentation",ng-show="ctrl.getSelectsIds().length != 0")
                    a(role="menuitem" ng-href="/api/positions/export_specification_pdf?{{ctrl.getExportParams(currentOrg.id)}}" ) 导出所选岗位描述书
    div(nb-table="ctrl.positions" nb-safe-src="ctrl.positions")
        input(type="hidden" nb-pipe="ctrl.search(tableState)")
        table.table.table-striped.ng-scope.custom-table
            thead
                tr
                    th(select-row="" mode="all")
                    th 岗位名称
                    th 通道
                    th 编制数
                    th 工作时间
                    th OA文件编号
            tbody
                tr(ng-repeat="pos in ctrl.positions track by pos.id")
                    td.has-checkbox(select-row="pos" mode="multiple")
                    td.org-post
                        a(
                        template-url="partials/position/position_detail.html"
                        title="岗位详情"
                        nb-panel
                        prepare-data="pos"
                        ) {{pos.name}}
                    td(ng-bind="pos.channel.displayName")
                    //- td.org-preparation
                    td
                        span(ng-class="{'overstaffed': pos.overstaffedNum > 0}") {{pos.staffing}}
                        span /{{pos.budgetedStaffing}}
                    td(ng-bind="pos.schedule.displayName")
                    td(ng-bind="pos.oaFileNo")