.app-content-wrapper(flex ng-controller="PerformanceMasterRecord as ctrl")
    div(nb-filter="ctrl.filterOptions" on-search="ctrl.search(state)")

    div.ui-grid-container
        md-toolbar
            .md-toolbar-tools
                h2 绩效记录
                div(flex)

                md-button.md-primary.md-raised(
                    nb-dialog
                    ng-disabled="!ctrl.getSelected()"
                    template-url="/partials/performance/record/add_attachment.html"
                    locals="{performance: ctrl.getSelected(), can_upload: true, outerScope: ctrl.scope, can_del: true}"
                ) 上传文档

        div(nb-grid
            multi-select="false"
            export-api
            grid-edit
            grid-row-edit
            grid-cellNav
            on-register-api="ctrl.initialize(gridApi)"
            grid-selection column-defs="ctrl.columnDef"
            safe-src="ctrl.performances")
