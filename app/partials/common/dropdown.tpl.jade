.dropdown(ng-class="{'open':dropdown.isOpen}")
  button.btn.btn-default.dropdown-toggle(type="button" ng-click="dropdown.toggle()")
    {{ selected || '请选择'}}
    span.caret
  ul.dropdown-menu(role="menu")
    li(role="form")
        form(ng-submit= "addItem(newItem)" )
            input(type="text" ng-model="dropdown.newItem")
            input(type="submit" class="JdropdownAdd")
    li(role="presentation", ng-repeat="item in dropdown.options")
      a(role="menuitem", tabindex="-1", href="javascript:void(0);", ng-click="dropdown.setSelected($index)") {{::item}}