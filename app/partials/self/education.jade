section.personnel-info-section(ng-init="educations = currentUser.educationExperiences.$refresh();param= {}")
    .personnel-top-header.clearfix
        h4.pull-left 教育经历
        button.pull-right(ng-click="param.newExp = {}") 新增
    .personnel-content-body
        .personnel-section-wrap
            section.personnel-info-control.clearfix(ng-if="param.newExp")
                form.personnel-info-right.form-split(name="eduEditForm", ng-submit="educations.$create(param.newExp);param.newExp = null;educations.$refresh()")
                    .form-btn-group
                        button.btn.btn-info(type="submit") 创建
                        button.btn.btn-default(ng-click="param.newExp = null") 取消
                    .form-group
                        label.control-label 入学日期：
                        input.form-control(ng-model="param.newExp.admissionDate", bs-datepicker)
                    .form-group
                        label.control-label 毕业时间：
                        input.form-control(ng-model="param.newExp.graduationDate", bs-datepicker)
                    .form-group
                        label.control-label 毕业院校：
                        input.form-control(ng-model="param.newExp.school")
                    .form-group
                        label.control-label 专业：
                        input.form-control(ng-model="param.newExp.major")
                    .form-group
                        label.control-label 学历：
                        nb-dropdown(ng-model="param.newExp.educationBackground", remote-key="education_backgrounds")
                    .form-group
                        label.control-label 学位：
                        nb-dropdown(ng-model="param.newExp.degree", remote-key="degrees")
                    .form-group
                        label.control-label 证明人：
                        input.form-control(ng-model="param.newExp.witness")
        h4 入司前
        .personnel-section-wrap(ng-controller="EditableResource", ng-repeat="education in educations | filterBy: ['category']:'before'")
            section.personnel-info-control.clearfix(ng-hide="editing")
                .personnel-info-right.form-split
                    .form-btn-group
                        button.btn.btn-default(ng-click="edit()") 编辑
                    .form-group
                        label.control-label 入学日期：
                        .form-content {{education.admissionDate | date:'yyyy-MM-dd'}}
                    .form-group
                        label.control-label 毕业时间：
                        .form-content {{education.graduationDate | date:'yyyy-MM-dd'}}
                    .form-group
                        label.control-label 毕业院校：
                        .form-content {{education.school}}
                    .form-group
                        label.control-label 专业：
                        .form-content {{education.major}}
                    .form-group
                        label.control-label 学历：
                        .form-content {{education.educationBackground.displayName}}
                    .form-group
                        label.control-label 学位：
                        .form-content {{education.degree.displayName}}
                    .form-group
                        label.control-label 证明人：
                        .form-content {{education.witness}}
            section.personnel-info-control.clearfix(ng-if="editing")
                form.personnel-info-right.form-split(name="eduEditForm", ng-submit="save(education.$save())")
                    .form-btn-group
                        button.btn.btn-info(type="submit" ng-disabled="eduEditForm.$invalid") 保存
                        button.btn.btn-default(ng-click="cancel(current, $event)") 取消
                    .form-group
                        label.control-label 入学日期：
                        input.form-control(ng-model="education.admissionDate", bs-datepicker)
                    .form-group
                        label.control-label 毕业时间：
                        input.form-control(ng-model="education.graduationDate", bs-datepicker)
                    .form-group
                        label.control-label 毕业院校：
                        input.form-control(ng-model="education.school")
                    .form-group
                        label.control-label 专业：
                        input.form-control(ng-model="education.major")
                    .form-group
                        label.control-label 学历：
                        nb-dropdown(ng-model="education.educationBackground", remote-key="education_backgrounds")
                    .form-group
                        label.control-label 学位：
                        nb-dropdown(ng-model="education.degree", remote-key="degrees")
                    .form-group
                        label.control-label 证明人：
                        input.form-control(ng-model="education.witness")
        h4 入司后
        .personnel-section-wrap(ng-controller="EditableResource", ng-repeat="education in educations | filterBy: ['category']:'after'")
