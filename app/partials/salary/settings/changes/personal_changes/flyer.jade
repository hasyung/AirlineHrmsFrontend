extends ./channels_layout.jade

block vars
    - var hasBaseSetting = true
    - var hasHoursFeeSetting = true
    - var hasPerformanceSetting = false
    - var hasAllowanceSetting = true
    - var hasCommunicate = true
    - var hasServiceCarSetting = true
    - var hasTempSetting = true

block base_setting
    div(layout)
        md-input-container.row-has-value(flex)
            label 基本工资
            md-select(ng-model="current.baseWage" placeholder="请选择" ng-change="current.baseChannel=null; current.baseMoney=0; current.baseFlag=null; exchangeCtrl.fly(current);" ng-disabled="!exchangeCtrl.editing" ng-readonly="!exchangeCtrl.editing")
                md-option(value="flyer_duty_leader_base") 责任机长
                md-option(value="flyer_legend_base") 荣誉级飞行员
                md-option(value="flyer_leader_base") 机长
                md-option(value="flyer_copilot_base") 副驾
                md-option(value="flyer_teacher_A_base") 教员A
                md-option(value="flyer_teacher_B_base") 教员B
                md-option(value="flyer_teacher_C_base") 教员C
                md-option(value="flyer_student_base") 学员
                md-option(value="air_observer_base") 空中观察员
                md-option(value="manager15_base") 管理
                md-option(value="leader_base") 干部
        md-input-container.row-has-value(flex)
            label 薪酬通道
            md-select(ng-model="current.baseChannel" placeholder="请选择" ng-change="exchangeCtrl.fly(current)" ng-disabled="!exchangeCtrl.editing" ng-readonly="!exchangeCtrl.editing")
                md-option(ng-value="item" ng-repeat="item in exchangeCtrl.fly_channel_array(current)") {{item}}
        md-input-container.row-has-value(flex)
            label 档级
            md-select(ng-model="current.baseFlag" placeholder="请选择" ng-change="exchangeCtrl.fly(current)" ng-disabled="!exchangeCtrl.editing" ng-readonly="!exchangeCtrl.editing")
                md-option(ng-value="item" ng-repeat="item in exchangeCtrl.fly_flag_array(current)") {{item}}
        md-input-container(flex)
            label 金额
            input(type="number" min="0" max="100000" step="1" ng-model="current.baseMoney" readonly)
    div(layout)
        md-input-container(flex)
            label 到岗日期
            input(ng-model="current.joinScalDate" readonly)
        md-input-container(flex)
            label 薪酬到岗日期
            input(bs-datepicker ng-model="current.joinSalaryScalDate" ng-disabled="!exchangeCtrl.editing")
        md-input-container(flex)
            label 工龄工资
            input(ng-model="current.workingYearsSalary" ng-disabled="!exchangeCtrl.editing")
        md-input-container.row-has-value(
            flex
            ng-if="current.categoryId==2 || current.categoryId==1 || current.technicalGrade"
            )
            label 薪酬等级
            md-select(ng-model="current.leaderGrade" placeholder="请选择" ng-change="exchangeCtrl.flyPerf(current)" ng-disabled="!exchangeCtrl.editing" ng-readonly="!exchangeCtrl.editing")
                md-option(value="B1") B1
                md-option(value="B2") B2
                md-option(value="C1") C1
                md-option(value="C2") C2
                md-option(value="C3") C3
                md-option(value="C4") C4
                md-option(value="C5") C5
                md-option(value="D1") D1
                md-option(value="D2") D2
                md-option(value="D3") D3
                md-option(value="D4") D4

    div(layout)
        md-input-container(flex)
            label 岗位工资保留
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepPosition" ng-disabled="!exchangeCtrl.editing")
        md-input-container(flex)
            label 业绩奖保留
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepPerformance" ng-disabled="!exchangeCtrl.editing")
        md-input-container(flex)
            label 工龄工资保留
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepWorkingYears" ng-disabled="!exchangeCtrl.editing")
    div(layout)
        md-input-container(flex)
            label 保底增幅
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepMinimumGrowth" ng-disabled="!exchangeCtrl.editing")
        md-input-container(flex)
            label 地勤补贴保留
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepLandAllowance" ng-disabled="!exchangeCtrl.editing")
        md-input-container(flex)
            label 生活补贴保留1
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepLife1" ng-disabled="!exchangeCtrl.editing")
    div(layout)
        md-input-container(flex)
            label 生活补贴保留2
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepLife2" ng-disabled="!exchangeCtrl.editing")
        md-input-container(flex)
            label 09调资增加保留
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepAdjustment09" ng-disabled="!exchangeCtrl.editing")
        md-input-container(flex)
            label 14公务用车保留
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepBus14" ng-disabled="!exchangeCtrl.editing")
    div(layout)
        md-input-container(flex)
            label 14通信补贴保留
            input(type="number" min="0" max="100000" step="1" ng-model="current.keepCommunication14" ng-disabled="!exchangeCtrl.editing")
        div(flex)
        div(flex)

    div(layout)
        md-checkbox(class="md-primary" ng-model="current.isSalarySpecial"  ng-disabled="!exchangeCtrl.editing") 薪酬特殊人员

