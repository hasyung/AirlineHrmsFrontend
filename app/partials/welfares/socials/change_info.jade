md-dialog.socialChangeInfo(
    ng-controller="EditableResource"
    ng-init="current = dialog.changeInfos.$refresh();"
    )
    md-toolbar.md-accent(md-theme="hrms")
            .md-toolbar-tools
                span 变动信息-{{current.category}}
    form(
        ng-submit="save(current.$save(), changeContract)"
        name="changeContract"
        ng-if="current.category == '合同新签'"
        )
        md-content.sticky-container
            include changeInfo/contract
        .md-actions
            md-button.md-primary.md-raised(ng-click="dialog.close()") 不做处理
            md-button.md-primary.md-raised(ng-click="submit; dialog.close()") 处理完毕
            md-button(ng-click="dialog.close()") 关 闭

