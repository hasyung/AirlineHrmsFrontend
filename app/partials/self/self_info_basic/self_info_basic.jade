section.personnel-info-section
    .personnel-top-header
        h4.pull-left 基本人事信息
    .personnel-content-body
        //- div.personnel-section-wrap()
        //-     include self_info_basic_section
        section.personnel-info-control.clearfix
            .btn-group.pull-right
                button.btn.btn-default(ui-sref=".editing") 编辑
            .personnel-info-left.pull-left
                .personnel-item-icon.personnel-item1
                .personnel-item-desc.bg-success 基本信息
            .personnel-info-right.editor-style.pull-left
                form.form-split
                    .form-group.block
                        label.control-label 员工编号：
                        .form-content {{currentUser.employeeNo}}
                    .form-group
                        label.control-label 姓名：
                        .form-content {{currentUser.name}}
                    .form-group
                        label.control-label 性别：
                        .form-content {{currentUser.gender.displayName}}
                    .form-group
                        label.control-label 身份证号：
                        .form-content {{currentUser.identityNo}}
                    .form-group
                        label.control-label 政治面貌：
                        .form-content {{currentUser.politicalStatus.displayName}}
                    .form-group
                        label.control-label 学历：
                        .form-content {{currentUser.educationBackground.displayName}}
                    .form-group
                        label.control-label 学位：
                        .form-content {{currentUser.degree.displayName}}
                    .form-group
                        label.control-label 毕业院校：
                        .form-content {{currentUser.school}}
                    .form-group
                        label.control-label 专业：
                        .form-content {{currentUser.major}}
                    .form-group
                        label.control-label 英语等级：
                        .form-content {{currentUser.englishLevel.displayName}}
                    .form-group
                        label.control-label 联系方式：
                        .form-content {{currentUser.contactWay.mobile}}

        section.personnel-info-control.clearfix
            .personnel-info-left.pull-left
                .personnel-item-icon.personnel-item1
                .personnel-item-desc.bg-success 岗位信息
            .personnel-info-right.editor-style.pull-left
                form.form-split
                    .form-group.block
                        label.control-label 所属部门：
                        .form-content {{currentUser.department.name}}
                    .form-group
                        label.control-label 岗位：
                        .form-content {{currentUser.position.name}}
                    .form-group
                        label.control-label 分类：
                        .form-content {{currentUser.category.displayName}}
                    .form-group
                        label.control-label 通道：
                        .form-content {{currentUser.channel.displayName}}
                    .form-group
                        label.control-label 类别：
                        .form-content 行政管理
                    .form-group
                        label.control-label 属地化地点：
                        .form-content {{currentUser.location.displayName}}
                    .form-group
                        label.control-label 用工性质：
                        .form-content {{currentUser.laborRelation.displayName}}
                    .form-group
                        label.control-label 用工关系状态：
                        .form-content {{currentUser.employeeStatus.displayName}}
