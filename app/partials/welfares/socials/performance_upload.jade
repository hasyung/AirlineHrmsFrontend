md-dialog.performance_upload
    md-toolbar.md-accent(md-theme="hrms")
            .md-toolbar-tools
                span 上传薪酬
    md-content.sticky-container
        .dialog-content(layout layout-align="center")
            section.form-material-section(flex)
                .upload-date(layout)
                    label 选择月份
                    md-select(ng-model="aaa" ng-change="aaa" placeholder="请选择年份")
                        md-option(ng-value="opt" ng-repeat="opt in locations track by $index") {{opt}}
                    label(flex-order="2") 年
                    md-select(ng-model="aaa" ng-change="aaa" placeholder="请选择月份")
                        md-option(ng-value="opt" ng-repeat="opt in locations track by $index") {{opt}}
                    label(flex-order="3") 月

                .accessory-container.ml30.mr30
                    .accessory-cell(ng-repeat="attachment in allege.allegeAttachments")
                        .accessory-name(ng-bind="attachment.name")
                        .accessory-size(ng-bind="attachment.size | byteFmt:2")
                        .accessory-switch
                            md-button.md-icon-button(ng-click="allege.attachments.$new(attachment.id).$destroy()")
                                md-icon.md-warn(md-svg-src="/images/svg/close.svg")

                .accessory-btn-group.ml30.mr30.mb20(
                    flow-init="{target: targetUrl, testChunks:false, uploadMethod:'POST', singleFile:true}"
                    flow-files-submitted="$flow.upload()"
                    flow-file-success="allege.allegeAttachments.push(outerScope.ctrl.parseJSON($message).allege_attachment)"
                )
                    md-button.md-primary.md-raised( flow-btn type="button") 添加文件
                    .tip

                div.ml30.mb30 上传结果




        .md-actions
            md-button(ng-click='dialog.close()') 取 消
            md-button.md-primary.md-raised(ng-click="submit() ; dialog.close()") 确 定