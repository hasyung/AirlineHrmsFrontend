extends ../../../component/workflow/my_requests

block vars
    - var requestTitle = '我要退养'
    - var requestTip = '点击退养申请，可发起退养流程。列表中选择未生效的申请，可撤销退养申请'
    - var gridSelection = true

block tools
    span 退养列表
    span(flex)
    span
        md-button.md-primary.md-raised(
            ng-if="ctrl.canCreateEarlyRetirement"
            nb-panel
            template-url="/partials/self/my_requests/early_retirement/early_retirement.html"
            locals="{list: ctrl.tableData}"
        ) 退养申请
    span
        md-button.md-primary.md-raised(
            ng-if="ctrl.canCreateEarlyRetirement"
            nb-confirm="ctrl.revert(isConfirm, ctrl.getSelected())"
            nb-title="你是否要撤销所选退养操作?"
            nb-content="当你点击确定时，您所申请的退养将被撤销!"
        ) 撤销退养