.searchbar
    h3 筛选条件
    a(nb-dialog="partials/component/table/save_filter_dialog.html" nb-dialog-scope="this") 保存过滤器
    ul
        li(ng-repeat="filter in filters track by filter.id")
            div
                span(ng-bind="filter.name")
                a.close(ng-click="filter.$destroy()") X

    .search-content.bg-white
        .search-row(ng-repeat="condition in conditions")
            button.btn.btn-default.search-del.fa.fa-times( ng-click="ctrl.remove($index)")
            //- select(ng-model="selected" nb-options="inactiveOptions")
                //- option(ng-repeat="o as option in options" ng-click="select(o)")
            div.search-opt(ng-model="condition.selected", nb-dropdown="predicates.inactivePredicates" prevent-clone default-option)

            .condition-detail.search-type(nb-watch-select)

            //- .condition(ng-repeat="option in predicate" ng-if="option === predicate.selected")
            //- div(nb-search-transclude)

            button.search-plus.btn.btn-default.fa.fa-plus(ng-click="ctrl.addCondition()" ng-show="$last && predicates.inactivePredicates.length > 0")
