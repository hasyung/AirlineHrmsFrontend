md-dialog(style="min-width: 500px;")
    md-toolbar.md-accent(md-theme="hrms")
        .md-toolbar-tools
            span 绩效申述
    md-content
        form()
            div(style="padding: 0 20px; margin-bottom: 40px;")
                md-input-container(flex style="padding-bottom: 19px;")
                    label 岗位名称
                    textarea(ng-model="aaa" md-maxlength="2000")

            .md-actions(style="border-top: 1px solid rgba(0, 0, 0, .12); padding: 0 20px;")
                md-button.white.md-raised.pull-right(type="cancel" ng-disabled="posForm.$invalid") 取消
                md-button.md-primary.md-raised.pull-right(type="submit" ng-disabled="posForm.$invalid") 提交
