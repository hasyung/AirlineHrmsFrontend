    md-input-container.row-has-value(flex)
        label 档级
        md-select(ng-model="current.baseFlag" placeholder="请选择")
            md-option(value="6") 6
            md-option(value="7") 7
            md-option(value="8") 8
            md-option(value="9") 9
            md-option(value="10") 10
