div(layout)
    md-input-container.row-has-value(flex)
        label 薪酬通道
        md-select(ng-model="current.baseChannel" placeholder="请选择")
            md-option(value="飞行学员") 空勤空保
    md-input-container.row-has-value(flex)
        label 档级
        md-select(ng-model="current.baseFlag" placeholder="请选择")
            md-option(value="6") 6
            md-option(value="7") 7
            md-option(value="8") 8
            md-option(value="9") 9
            md-option(value="10") 10
    md-input-container(flex)
        label 金额
        input(type="number" min="0" max="1000000" step="1" ng-model="current.cash" readonly)

