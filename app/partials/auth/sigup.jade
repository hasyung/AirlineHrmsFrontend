.modal-backdrop.fade.in
.container(style="width:100%;height:100%;z-index:1000000;position:absolute;")
  .w-xxl.w-auto-xs(style="margin:0 auto;background-color:#fff;padding:20px 30px;", ng-controller="SigupController as ctrl")
    .m-b-lg
      .wrapper.text-center
        strong 注册
      form.form-validation(name='form')
        .text-danger.wrapper.text-center(ng-show='authError')
          | {{authError}}
        .list-group.list-group-sm
          .list-group-item
            input.form-control.no-border(placeholder='昵称', ng-model='user.name', required='true')
          .list-group-item
            input.form-control.no-border(type='text', placeholder='工号', ng-model='user.employee_no', required='true')
          .list-group-item
            input.form-control.no-border(type='password', placeholder='密码', ng-model='user.password', required='true')
        
        button.btn.btn-lg.btn-primary.btn-block(type='submit', ng-click='ctrl.sigup()', ng-disabled='form.$invalid') Sign up
        .line.line-dashed
        p.text-center
          small 已经有账号
        a.btn.btn-lg.btn-default.btn-block(ui-sref='login') 登录
