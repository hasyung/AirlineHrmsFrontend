.app-content-wrapper(flex ng-controller="salaryCtrl as ctrl" ng-init="ctrl.loadPositions('temp')" style="padding: 0;")
    .salary-basic(style="padding: 0;")
        md-toolbar
            .md-toolbar-tools
                h2 岗位设置
                span(flex)

        div(layout)
            org-search(flex ng-model="selectDepId" placeholder="部门" float-label)
            md-input-container(flex)
              label 关键词过滤
              input(ng-model="keywords" placeholder="关键词" ng-change="ctrl.loadPositions(selectDepId)")

        table.tablexx.table-default.table-bordered
            thead
                tr
                    th 岗位
                    th 标准

            tbody
                tr(ng-repeat="item in ctrl.positions track by $index")
                    td {{item.positionName}}
                    td
                        md-select(ng-model="item.temperature_amount")
                            md-option(value="0") 无
                            md-option(value="400") 400
                            md-option(value="300") 300
                            md-option(value="200") 200