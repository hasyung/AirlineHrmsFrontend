            .desc 我要转正(没得)
        a.my-requests-cell(ui-sref=".resignation")
            .cell__btn.cizhi
            .desc 我要辞职
        a.my-requests-cell(ui-sref=".adjust_position")
            .cell__btn.tiaogang
            .desc 我要调岗
        a.my-requests-cell(ui-sref=".erarly_retirement")
            .cell__btn.tuiyang
            .desc 我要退养
        a.my-requests-cell.ml0(ui-sref=".renew_contract")
