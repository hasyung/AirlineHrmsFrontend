.app-content-wrapper(flex ng-controller="socialComputeCtrl as ctrl")
    md-toolbar.toolbar--welfare
        .md-toolbar-tools
            span(layout)
                label 月度
                md-select(ng-model="aaa" ng-change="aaa" placeholder="请选择年份")
                    md-option(ng-value="opt" ng-repeat="opt in locations track by $index") {{opt}}
                label(flex-order="2") 年
                md-select(ng-model="aaa" ng-change="aaa" placeholder="请选择月份")
                    md-option(ng-value="opt" ng-repeat="opt in locations track by $index") {{opt}}
                label(flex-order="3") 月
            span(flex)
            span
                md-button.md-raised.md-primary(
                    nb-dialog
                    template-url="partials/welfares/socials/performance_upload.html"
                    ) 上传薪酬
            span
                md-button.md-raised.md-primary(
                    nb-dialog
                    template-url="partials/welfares/socials/compute.html"
                    ) 计算
            span
                md-dropmenu(ng-init="selectedRows=[]")
                    md-drop-label(ng-click="selectedRows = ctrl.getSelectsIds()")
                        md-button.md-primary.md-raised 导出
                    md-drop-option()
                        a(flex ng-href="/api/employees/export_to_xls") 导出全部人员
                    md-drop-option(ng-if="selectedRows.length > 0")
                        a(
                            nb-download
                            url-prefix="/api/employees/export_to_xls?employee_ids=#param#"
                            param-getter="ctrl.getSelectsIds()"
                            href="javascript:;"
                            download
                        ) 导出所选人员

    div.ui-grid-container.mt5
        md-toolbar
            .md-toolbar-tools
                h2 社保个人设置

        div(nb-grid column-defs="ctrl.columnDef" grid-selection safe-src="ctrl.configurations")


