.app-content-wrapper.department-chart(flex ng-controller="DepartmentChartCtrl as ctrl")
	div()
		md-button.md-raised.md-primary.mb50(
			nb-dialog
			template-url="partials/department/department_chart/report_new.html"
			locals="{ctrl: ctrl, reports: ctrl.reports}"
		) 新增
	ul.dep__reports
		li.dep__report(ng-repeat="report in ctrl.reports track by report.id" ng-class="{'editing': editing}")
			fieldset()
				.dep__title(layout)
					md-input-container(flex md-no-float)
						input(type='text', placeholder='标题', ng-model="title" ng-readonly="!editing")
					.dep__btn-group(ng-show="editing")
						md-button.md-fab.white(ng-click="editing=false")
							md-icon(md-svg-src="/images/svg/check.svg" aria-label="保存")
						md-button.md-fab.white(ng-click="editing=false")
							md-icon(md-svg-src="/images/svg/close.svg" aria-label="取消")
						md-button.md-fab.white()
							md-icon(md-svg-src="/images/svg/destroy.svg" aria-label="删除")
					.dep__btn-group(ng-show="!editing")
						md-button.md-fab.white(ng-click="editing=true")
							md-icon(md-svg-src="/images/svg/edit_24px.svg" aria-label="修改")
						md-button.md-fab.white()
							md-icon(md-svg-src="/images/svg/destroy.svg" aria-label="删除")

				md-input-container.md-block
					label 正文内容
					textarea(ng-model="mainbody" md-maxlength="150" rows="1" md-select-on-focus ng-readonly="!editing")

				md-subheader.accessory-header.mt10 附件
				.accessory-container
					.accessory-cell(ng-repeat="attachment in attachments")
						div(ng-if="ctrl.isImgObj(attachment)" nb-gallery img-obj="attachment" style="cursor: pointer;")
							.accessory-name() {{attachment.name}}
							.accessory-size() {{attachment.size | byteFmt:2}}

						div(ng-if="!ctrl.isImgObj(attachment)" style="cursor: pointer;")
							a(
								style="display: block; color: rgba(0,0,0,0.87)"
								ng-href="{{attachment.default}}"
								download
								)
								.accessory-name() {{attachment.name}}
								.accessory-size() {{attachment.size | byteFmt:2}}
						.accessory-switch(ng-show="editing")
							md-button.md-icon-button(type="button" ng-click="ctrl.attachmentDestroy(attachment)")
								md-icon.md-warn(md-svg-src="/images/svg/close.svg")
				.accessory-btn-group(
					ng-show="editing"
					flow-init="{target: '/api/attachments/upload_file', allowDuplicateUploads: true, testChunks:false, uploadMethod:'POST', singleFile:true}"
					flow-files-submitted="$flow.upload()"
					flow-file-success="ctrl.uploadAttachments(performance, attachments, $message);"
					)
					md-button.md-primary.md-raised(flow-btn type="button") 文件上传

				md-subheader.mt40 发送至：
				div(layout ng-disabled="!editing")
					md-checkbox.md-primary(ng-model="positions") 总经理
					md-checkbox.md-primary(ng-model="positions") 副总经理
					md-checkbox.md-primary(ng-model="positions") 党委书记

