form(ng-submit="ctrl.submitForm()")
    md-input-container
        label 请假类别
        md-select(ng-model="leaveRequest.type")
            md-option(value="1") 病假
            md-option(value="2") 事假
            md-option(value="3") 丧假
    md-input-container
        label 开始时间
        input(type="date" ng-model="leaveRequest.startDate" bs-datepicker="" trigger="click" container="body")
    md-input-container
        label 结束时间
        input(type="date" ng-model="leaveRequest.endDate" bs-datepicker container="body")
    md-input-container
        label message
        textarea(ng-model="leaveRequest.message")
    .form-actions
        md-button(type="submit") 提交
        md-button(type="button" ng-click="closeThisDialog()") 取消
