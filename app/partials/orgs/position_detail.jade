.app-content-wrapper(ng-init= "currentPos = ngDialogData; currentSpe = currentPos.specification.$refresh()")
    .org-pos-detail-menu
        .org-menu-wrapper
            .org-icon-window
                .org-detail-item1.org-detail-item(class="active")
                .org-detail-item2.org-detail-item
                .org-detail-item3.org-detail-item
                .org-detail-item4.org-detail-item
                .org-detail-item5.org-detail-item
                .org-detail-item6.org-detail-item
                .org-detail-item7.org-detail-item
    .org-pos-detail-window.bg-white
        .org-pos-detail-content

            section.position-info(ng-controller="EditableResource")
                div.showing(ng-hide="editing")
                    .btn-group.pull-right
                        button.btn.btn-default(ng-click="edit()") 编辑
                    h3 岗位信息
                    .editor-style
                        table
                            tbody
                                tr
                                    th 岗位名称：
                                    td {{currentPos.name}}
                                    th 编制：
                                    td {{currentPos.budgetedStaffing}}
                                tr
                                    th 所属部门：
                                    td {{currentOrg.name}}
                                    th 工作制度：
                                    td {{currentPos.schedule.displayName || '无'}}
                                tr
                                    th 通道：
                                    td {{currentPos.channel.displayName || '无'}}
                                    th 分类：
                                    td {{currentPos.category.displayName || '无'}}
                                tr
                                    th OA文件编号：
                                    td {{currentPos.oaFileNo}}
                                    th 岗位性质：
                                    td {{currentPos.nature.displayName || '无'}}
                div.editing(ng-if="editing")
                    .custom-btn-group.pull-right
                        button.btn.btn-info(ng-click="save(currentPos.$save())") 保存
                        button.btn.btn-default(ng-click="cancel()") 取消
                    h3 岗位信息
                    form.editor-style.form-validator-table(name="posForm" novalidate)
                        table
                            tbody
                                tr
                                    th 岗位名称：
                                    td
                                        input(type='text', placeholder='岗位名称', ng-model="currentPos.name", name="name", required)
                                        .form-control-error(ng-messages="posForm.name.$error", ng-if="posForm.name.$dirty")
                                            .form-group-error(ng-message="required") 名称必填
                                    th 编制：
                                    td
                                        input(type='number', placeholder='填写计划编制人数', name="budgetedStaffing", ng-model="currentPos.budgetedStaffing", required)
                                        .form-control-error(ng-messages="posForm.budgetedStaffing.$error", ng-if="posForm.budgetedStaffing.$dirty")
                                            .form-group-error(ng-message="required") 编制必填
                                            .form-group-error(ng-message="number") 类型必须为数字
                                tr
                                    th 所属部门：
                                    td
                                        ui-select(ng-model="currentPos.department" theme="select2" style="width:30%;" required)
                                            ui-select-match(placeholder="请输入机构名称") {{ $select.selected.name }}
                                            ui-select-choices(repeat="org in allOrgs | filter:$select.search | limitTo: 5") {{ org.name }}
                                    th 工作制度：
                                    td
                                        nb-dropdown(
                                            ng-model="currentPos.schedule" remote-key="position_schedules", required="true", name="schedule")
                                        .form-control-error(ng-messages="posForm.schedule.$error", ng-if="posForm.schedule.$dirty")
                                            .form-group-error(ng-message="required") 工时必选
                                tr
                                    th 通道：
                                    td
                                        nb-dropdown(
                                            ng-model="currentPos.channel", remote-key="position_channels", name="channel", additory="false", required)
                                        .form-control-error(ng-messages="posForm.channel.$error", ng-if="posForm.channel.$dirty")
                                            .form-group-error(ng-message="required") 通道必选
                                    th 分类：
                                    td
                                        nb-dropdown(
                                            ng-model="currentPos.category" remote-key="position_categories", required="true", name="category")
                                        .form-control-error(ng-messages="posForm.category.$error", ng-if="posForm.category.$dirty")
                                            .form-group-error(ng-message="required") 类别必选
                                tr
                                    th OA文件编号：
                                    td
                                        input(type='text', placeholder='填写OA文件编号', name="fileName", ng-model="currentPos.oaFileNo", required)
                                        .form-control-error(ng-messages="posForm.fileName.$error", ng-if="posForm.fileName.$dirty")
                                            .form-group-error(ng-message="required") OA文件必填
                                    th 岗位性质：
                                    td
                                        nb-dropdown(
                                            ng-model="currentPos.nature" remote-key="position_natures", required="true", name="nature")
                                        .form-control-error(ng-messages="posForm.nature.$error", ng-if="posForm.nature.$dirty")
                                            .form-group-error(ng-message="required") 性质必选


            section.position-specification(ng-controller="EditableResource")
                .showing(ng-hide="editing")
                    .custom-btn-group.pull-right
                        button.btn.btn-default(ng-click="edit()") 编辑
                    h3 工作职责
                    div(ng-bind-html="currentSpe.duty")
                        | 无
                    h3 工作权限
                    ol
                        li 人事权限：
                            span {{currentSpe.personnelPermission}}
                        li 财务权限：
                            span {{currentSpe.financialPermission}}
                        li 业务权限：
                            span {{currentSpe.businessPermission}}
                    h3 工作关系
                    ol
                        li 直属上级：
                            span {{currentSpe.superior}}
                        li 直属下级：
                            span {{currentSpe.underling}}
                        li 内部联系：
                            span {{currentSpe.internalRelation}}
                        li 外部联系：
                            span {{currentSpe.externalRelation}}
                    h3 任职条件
                    div(ng-bind-html="currentSpe.qualification")
                        | 无
                    //- h3 工作时间
                    //- p {{currentPos.schedule.displayName || '无'}}

                .editing(ng-if="editing")
                    .custom-btn-group.pull-right
                        button.btn.btn-info(ng-click="save(currentSpe.$save())") 保存
                        button.btn.btn-default(ng-click="cancel()") 取消
                    form.editor-style.form-validator-table
                        h3 工作职责
                        textarea(
                            simditor
                            toolbar="['bold', 'italic', 'underline', 'ol', 'ul']"
                            placeholder="这里输入内容"
                            ng-model="currentSpe.duty"
                        )
                        h3 工作权限
                        ol
                            li 人事权限：
                                span
                                    input(type='text', placeholder='请输入人事权限', ng-model="currentSpe.personnelPermission")
                            li 财务权限：
                                span
                                    input(type='text', placeholder='请输入财务权限', ng-model="currentSpe.financialPermission")
                            li 业务权限：
                                span
                                    input(type='text', placeholder='请输入业务权限', ng-model="currentSpe.businessPermission")

                        h3 工作关系
                        ol
                            li 直属上级：
                                span
                                    input(type='text', placeholder='请输入直属上级', ng-model="currentSpe.superior")
                            li 直属下级：
                                span
                                    input(type='text', placeholder='请输入直属下级', ng-model="currentSpe.underling")
                            li 内部联系：
                                span
                                    input(type='text', placeholder='请输入内部联系', ng-model="currentSpe.internalRelation")
                            li 外部联系：
                                span
                                    input(type='text', placeholder='请输入外部联系', ng-model="currentSpe.externalRelation")
                        h3 任职条件
                        textarea(
                            simditor
                            toolbar="['bold', 'italic', 'underline', 'ol', 'ul']"
                            placeholder="这里输入内容"
                            ng-model="currentSpe.qualification"
                        )






