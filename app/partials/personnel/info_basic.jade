.personnel-content.personnel-control
  section.personnel-info-section(ng-init= "selectEmp = ngDialogData")
    tabset
        tab(heading="基本人事信息")
            //- .personnel-top-header
            //-   h4.pull-left 基本人事信息
            .personnel-content-body
                section.personnel-section-wrap(ng-controller="EditableResource")
                    div.showing(ng-hide="editing")
                        .btn-group.pull-right
                            button.btn.btn-default(ng-click="edit()") 编辑
                        include info_basic/info_basic_section
                    div.editing(ng-if="editing")
                        .btn-group.pull-right
                            button.btn.btn-info(ng-click="save(selectEmp.$save())") 保存
                            button.btn.btn-default(ng-click="cancel()") 取消
                        include info_basic/info_basic_edit
                section.personnel-section-wrap(ng-controller="EditableResource")
                    div.showing(ng-hide="editing")
                        .btn-group.pull-right
                            button.btn.btn-default(ng-click="edit()") 编辑
                        include info_basic/info_position_section
                    div.editing(ng-if="editing")
                        .btn-group.pull-right
                            button.btn.btn-info(ng-click="save(selectEmp.$save())") 保存
                            button.btn.btn-default(ng-click="cancel()") 取消
                        include info_basic/info_position_edit
        tab(heading="培训记录")
            p 培训记录
        tab(heading="奖惩记录")
            p 奖惩记录
        tab(heading="考勤信息")
            p 考勤信息
        tab(heading="绩效考核")
            p 绩效考核
        tab(heading="档案信息")
            p 档案信息

