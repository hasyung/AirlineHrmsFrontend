        .org-main-node 四川航空
        ul
            li.org-node(ng-repeat="org in ctrl.orgs | filterBy: ['depth']: 1", ng-click="ctrl.setCurrentOrg(org)") {{::org.name}}
            




    .app-aside.org-aside.hidden-xs.bg-white-opacity.pull-right
        .org-row(ui-view='sub')

    .org-tree.col-md-3
        div#org_tree
            ul
                li( ng-repeat="org in ::ctrl.orgs | filterBy: ['nodeType']: 'internal'"
                    ng-click="ctrl.setCurrentOrg(org)")
                    a {{::org.name}}
    .org-chart.col-md-5
        button(ng-click="ctrl.openHistoryPanel()") 历史

        div(ng-show="ctrl.org_modified")
            button(ng-click="ctrl.active()") 生效
            button(ng-click="ctrl.revert()") 撤销


