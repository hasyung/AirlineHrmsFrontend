.app-content-wrapper(flex ng-controller="welfareCtrl as wel")
    div.pl20.pr20.pt30.pb30.bg-white
        div(layout)
            div(layout)
                label.dib.bdb-divider.mb7 缴纳地区
                md-select(ng-model="currentSettingLocation" ng-change="" placeholder="请选择地点")
                    md-option(ng-value="opt" ng-repeat="opt in locations track by $index") {{opt}}
            span(flex)
            md-button.md-raised.md-primary.m0(ng-click="saveConfig(setting)") 保存
    md-content.pl20.pr20(ng-show="!!currentSettingLocation")
        md-divider
        div.inline-input-container.mt30.mb30.pl10
            span.mr20 养老保险基数范围
            md-input-container(md-no-float).mr10.dib
                input(placeholder="下限" ng-model="setting.pension_insure.upper_limit" type="number" step="0.01")
            span.ml10.mr10 至
            md-input-container(md-no-float).mr10.dib
                input(placeholder="上限" ng-model="setting.pension_insure.lower_limit" type="number" step="0.01")
        div.inline-input-container.mt30.mb30.pl10
            span.mr20 其他保险基数范围
            md-input-container(md-no-float).mr10.dib
                input(placeholder="下限" ng-model="setting.other_insure.upper_limit" type="number" step="0.01")
            span.ml10.mr10 至
            md-input-container(md-no-float).mr10.dib
                input(placeholder="上限" ng-model="setting.other_insure.lower_limit" type="number" step="0.01")
            span.muted.f12 (不设置其他保险基数则选用养老保险基数计算)
        md-divider

        table.tablexx.table-default
            thead
                tr
                    th 保险名称
                    th 计算方式
                    th 公司部分
                    th 个人部分
            tbody
                tr
                    td 养老保险
                    td
                        md-switch(ng-model="setting.pension.is_ration" ).m0 {{ setting.pension.is_ration ? '按金额(RMB)' : '按比例(%)' }}
                    td
                        md-input-container.p2(ng-show="setting.pension.is_ration")
                            input(type="number" ng-model="setting.pension.company_money" min="0" step="1" )
                        md-input-container.p2(ng-hide="setting.pension.is_ration")
                            input(type="number" ng-model="setting.pension.company_percent" min="0" max="1" step="0.01")
                    td
                        md-input-container.p2(ng-show="setting.pension.is_ration")
                            input(type="number" ng-model="setting.pension.personage_money" min="0" step="1" )
                        md-input-container.p2(ng-hide="setting.pension.is_ration")
                            input(type="number" ng-model="setting.pension.personage_percent" min="0" max="1" step="0.01")

