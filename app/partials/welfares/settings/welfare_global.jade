.app-content-wrapper(flex ng-controller="welfareCtrl as wel")
    md-toolbar.toolbar--welfare
        .md-toolbar-tools
            span(layout)
                label 缴纳地区
                md-select(ng-model="currentSettingLocation" ng-change="" placeholder="请选择地点")
                    md-option(ng-value="opt" ng-repeat="opt in locations track by $index") {{opt}}
            span(flex)
            span
                md-button.md-raised.md-primary(ng-click="saveConfig(setting)") 保存
    md-content.pl20.pr20(ng-show="!!currentSettingLocation")
        md-divider
        .children-float-row.mt40.mb20
            label.mr40 个人基数计算方式
            md-radio-group
                md-radio-button.md-primary(value="departments" ng-model="setting.is_annual") 年度变化
                md-radio-button.md-primary(value="reviewer" ng-model="setting.is_annual") 月度随薪酬变化
