                    th.sm 计算方式
                    th.sm 公司部分
                    th.sm 个人部分
            tbody
                tr
                    td 养老保险
                    td
                        span.min
                            input(type="number" ng-model="setting.pension.lower_limit")
                            |RMB
                        span.to —
                        span.max
                            input(type="number" ng-model="setting.pension.upper_limit")
                            |RMB
                    td
                        md-switch.md-primary(ng-model="setting.pension.is_ration" ).m0 {{ setting.pension.is_ration ? '按金额(RMB)' : '按比例(%)' }}
                    td
                        span.p2(ng-show="setting.pension.is_ration")
                            input(type="number" ng-model="setting.pension.company_money" min="0" step="1" )
                            |RMB
                        span.p2(ng-hide="setting.pension.is_ration")
                            input(type="number" ng-model="setting.pension.company_percent" min="0" max="1" step="0.01")
                            |%
