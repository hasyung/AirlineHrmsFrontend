extends leave_layout

block vars
    - var flowType = 'Flow::MiscarriageLeave'
    - var flowName = '产假(流产)'
    - var formType = 1
    - var need_attachment = true


block additional_form
    div(layout)
        md-input-container.row-has-value(flex)
            label 怀孕时段
            md-select(ng-model="request.during_pregnancy" required)
                md-option(value="4个月以下") 4个月以下
                md-option(value="4个月以上") 4个月以上

block attachment_tip
    p.attachment-tip 请上传医院为您开具的证明照片