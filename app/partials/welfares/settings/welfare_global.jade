.app-content-wrapper(flex ng-controller="welfareCtrl as wel")
    form(ng-submit="saveConfig(setting)")
        md-toolbar.toolbar--welfare
            .md-toolbar-tools
                span(layout)
                    label 缴纳地区
                    md-select(ng-model="currentSettingLocation" placeholder="请选择地点")
                        md-option(ng-value="opt" ng-repeat="opt in locations track by $index") {{opt}}
                span(flex)
                span
                    md-button.md-raised.md-primary(type="submit") 保存

        md-content.pl20.pr20(ng-show="!!currentSettingLocation")
            md-divider
            .children-float-row.mt40.mb20
                label.mr40 个人基数计算方式
                md-radio-group(ng-model="setting.is_annual")
                    md-radio-button.md-primary(ng-value="true") 年度变化
                    md-radio-button.md-primary(ng-value="false") 月度随薪酬变化

            md-divider

            table.tablexx.table-default.table-bordered
                thead
                    tr
                        th.sm 保险名称
                        th.lg
                            span.min 基数范围（下限）
                            span.to 至
                            span.max 基数范围（上限）
                        th.sm 计算方式
                        th.sm 公司部分
                        th.sm 个人部分
                tbody
                    tr
                        td 养老保险
                        td
                            span.min
                                input(type="number" min="1" max="100000" step="0.000001" ng-model="setting.pension.lower_limit")
                                |RMB
                            span.to —
                            span.max
                                input(type="number" min="1" max="100000" step="0.000001" ng-model="setting.pension.upper_limit")
                                |RMB
                        td
                            md-switch.md-primary(ng-model="setting.pension.is_ration" ).m0 {{ setting.pension.is_ration ? '按金额(RMB)' : '按比例(%)' }}
                        td
                            span.p2(ng-show="setting.pension.is_ration")
                                input(type="number" ng-model="setting.pension.company_money" min="0" step="1" )
                                |RMB
                            span.p2(ng-hide="setting.pension.is_ration")
                                input(type="number" ng-model="setting.pension.company_percent" min="0" max="100" step="1")
                                |%
                        td
                            span.p2(ng-show="setting.pension.is_ration")
                                input(type="number" ng-model="setting.pension.personage_money" min="0" step="1" )
                                |RMB
                            span.p2(ng-hide="setting.pension.is_ration")
                                input(type="number" ng-model="setting.pension.personage_percent" min="0" max="100" step="1")
                                |%

