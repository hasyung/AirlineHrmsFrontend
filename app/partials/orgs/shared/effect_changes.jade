form.form-validator-dialog(novalidate, name="active_form", ng-submit="ctrl.active(active_form, log) && closeThisDialog()")
    fieldset
        md-input-container
            label OA文件名
            input(type="text" ng-model="log.oa_file_no" placeholder="文件编号",required="true")
        md-input-container
            label 日志标题
            input(type="text" ng-model="log.title" placeholder="文件编号",required="true")
        .form-group-row
            .pull-right.button-group
                md-button.md-raised(type='button',ng-click="closeThisDialog()") 取消
                md-button.md-raised.md-primary(ng-disabled="active_form.$invalid" type="submit") 确定

