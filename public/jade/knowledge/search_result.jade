.page-content
  .row
    include shared/top_navbar
    //- .col-md-12
      // BEGIN PAGE TITLE & BREADCRUMB
      h3.page-title
        | 知识库
      .zsk-ser
        form.input-group(ng-submit='search(search_text)')
          input.form-control(type='text', ng-model='search_text')
          span.input-group-btn
            button.fa.btn.fa-search(type='submit')
        .btn.red-sunglo(ui-sref='^.new') 新建我的文档
      ul.page-breadcrumb.breadcrumb
        li
          | 搜索关键词 “
          span.highlightText {{ search_keyword }}
          | ”
      // END PAGE TITLE & BREADCRUMB
  .row
    .col-md-12.blog-page
      .row
        .col-md-12.article-block
          .row.zsk-serch(ng-repeat='article in articles')
            .col-md-4.blog-img.blog-tag-data
              img.img-responsive(ng-src='{{article.cover_url}}', alt='', style='width:350px;height:200px;')
              ul.list-inline
                li
                  i.fa.fa-calendar
                  a(href='javascript:void(0)') {{article.updated_at | date: 'yyyy/MM/dd'}}
                li
                  i.fa.fa-comments
                  a(href='javascript:void(0)')
                    | {{article.comments_count}} 条评论
              ul.list-inline.blog-tags
                li
                  i.fa.fa-tags
                  a(href='javascript:void(0)', ng-bind-html='tag |highlight: search_keyword', ng-repeat='tag in article.tags')
            .col-md-8.blog-article
              h3
                a(ui-sref='^.byId({articleId:article.id})', ng-bind-html='article.title  | highlight: search_keyword')
              p(ng-bind-html='article.search_text | highlight: search_keyword')
              a.btn.blue(ui-sref='^.byId({articleId:article.id})')
                | 查看更多
                i.fa.fa-arrow-circle-o-right

