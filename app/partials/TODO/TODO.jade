        .personal-attence
            .custom-toolbar
                .toolbar-tools
                    span 个人考勤
                    span(flex)
                    span
                        md-button.md-icon-button
                            md-icon(md-svg-src="/images/svg/menu.svg")
            .content(column-chart)

