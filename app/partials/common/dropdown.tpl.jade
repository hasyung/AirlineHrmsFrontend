.dropdown(ng-class="{'open':dropdown.isOpen}")
    button.btn.btn-default.dropdown-toggle(type="button" ng-click="dropdown.toggle()")
        {{ selected || '请选择'}}
        span.caret
    ul.dropdown-menu(role="menu")
        li(role="form")
            form(ng-submit="dropdown.addItem($event, dropdown.newItem)" name="dropdown_form")
            input(type="text" ng-model="dropdown.newItem" ng-model-options="{ debounce: 250 }")
            //- button(type="button" ng-click="dropdown.addItem($event, dropdown.newItem)") 新增
            button(type="submit" ng-click="dropdown.addItem($event, dropdown_form, dropdown.newItem)") 新增
        li(role="presentation", ng-repeat="item in dropdown.options")
            a(role="menuitem", tabindex="-1", href="javascript:void(0);", ng-click="dropdown.setSelected($index)") {{::item}}