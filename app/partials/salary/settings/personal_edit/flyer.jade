div(layout)
    md-input-container.row-has-value(flex)
        label 薪酬通道
        md-select(ng-model="current.baseChannel" placeholder="请选择")
            md-option(value="飞行学员") 飞行学员
            md-option(value="副驾驶") 副驾驶
            md-option(value="责任机长") 责任机长
