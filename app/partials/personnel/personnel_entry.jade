.personnel-content.personnel-control
    section.personnel-info-section(ng-init= "selectEmp = ngDialogData")
        .personnel-top-header
            h4.pull-left 新员工入职信息填写
        .personnel-content-body
            form(ng-submit="ctrl.regEmployee(newEmp)" name="newEmpForm")
                section.personnel-section-wrap()
                    section.personnel-info-control.clearfix
                        .personnel-info-left.pull-left
                            .personnel-item-icon.personnel-item1
                            .personnel-item-desc.bg-success 基本信息
                        .personnel-info-right.editor-style.pull-left
                            .form-horizontal
                                .form-body
                                    .form-group.personnel-info-row
                                        label.control-label.col-md-3 姓名：
                                        div.col-md-5
                                            input.form-control(type="text" placeholder="请输入姓名" ng-model="newEmp.name")
                                    .form-group.personnel-info-row
                                        label.control-label.col-md-3 性别：
                                        div.col-md-5
                                            nb-dropdown(ng-model="newEmp.gender", remote-key="genders")
                                    .form-group
                                        label.control-label.col-md-3 身份证号码：
                                        div.col-md-5
                                            input.form-control(type="text" placeholder="身份证号，护照至少输入一项" ng-model="newEmp.identityNo")
                                    .form-group.personnel-info-row
                                        label.control-label.col-md-3 政治面貌：
                                        div.col-md-5
                                            nb-dropdown(ng-model="newEmp.politicalStatus", remote-key="political_status")
                                    .form-group
                                        label.control-label.col-md-3 学历：
                                        div.col-md-5
                                            nb-dropdown(ng-model="newEmp.educationBackgroud", remote-key="education_backgrounds")
                                    .form-group
                                        label.control-label.col-md-3 学位：
                                        div.col-md-5
                                            nb-dropdown(ng-model="newEmp.degree", remote-key="degrees")
                                    .form-group
                                        label.control-label.col-md-3 毕业院校：
                                        div.col-md-5
                                            input.form-control(type="text" placeholder="请输入毕业院校" ng-model="newEmp.school")
                                    .form-group.personnel-info-row
                                        label.control-label.col-md-3 专业：
                                        div.col-md-5
                                            input.form-control(type="text" placeholder="请输入专业" ng-model="newEmp.major")
                                    .form-group.personnel-info-row
                                        label.control-label.col-md-3 英语等级：
                                        div.col-md-5
                                            nb-dropdown(ng-model="newEmp.englishLevel", remote-key="english_levels")
                                    .form-group
                                        label.control-label.col-md-3 手机号码：
                                        div.col-md-5
                                            input.form-control(type="text" placeholder="请输入手机号码" ng-model="newEmp.contactWay.mobile")
                    section.personnel-section-wrap()
                        section.personnel-info-control.clearfix
                            .personnel-info-left.pull-left
                                .personnel-item-icon.personnel-item2
                                .personnel-item-desc.bg-success 岗位信息
                            .personnel-info-right.editor-style.pull-left
                                .form-horizontal
                                    .form-body
                                        .form-group.personnel-info-row
                                            label.control-label.col-md-3 所属部门：
                                            div.col-md-5
                                                input.form-control(
                                                    title="划转"
                                                    nb-dialog="partials/common/org_select.tpl.html"
                                                    nb-dialog-scope="this"
                                                    ng-model="newEmp.department.custStr"
                                                )
                                        .form-group.personnel-info-row
                                            label.control-label.col-md-3 岗位：
                                            div.col-md-5
                                                ui-select(ng-model="newEmp.position" theme="select2" required)
                                                    ui-select-match(placeholder="请输入岗位名称") {{ $select.selected.name }}
                                                    ui-select-choices(repeat="pos in ctrl.orgPos | filter:$select.search | limitTo: 5", refresh="ctrl.loadOrgPos()") {{ pos.name }}
                                        .form-group
                                            label.control-label.col-md-3 属地化地点：
                                            div.col-md-5
                                                nb-dropdown(ng-model="newEmp.location", remote-key="degrees")
                                        .form-group
                                            label.control-label.col-md-3 用工性质：
                                            div.col-md-5
                                                nb-dropdown(ng-model="newEmp.laborRelation", remote-key="degrees")
                                        .form-group
                                            label.control-label.col-md-3 用工关系状态：
                                            div.col-md-5
                                                nb-dropdown(ng-model="newEmp.employeeStatus", remote-key="degrees")
                    .btn-group-actions
                        button.btn.btn-info(type="submit") 提 交
                        button.btn.btn-default() 取 消

